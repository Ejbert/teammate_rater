<h1>Users</h1>

<table class="table table-striped table-bordered">
  <tr>
    <th>Rating</th>
    <th>First Name</th>
    <th>Last Name</th>
    <th>Email</th>
  </tr>
  
  <% @users.each do |user| %>
    <tr>
      <td>  <!-- eventually add aggregate rating: link_to review.rating, user  -->  </td>
      <td><%= link_to user.first_name, user %></td>
      <td><%= link_to user.last_name, user %></td>
      <td><a href="mailto:<%= user.email %>"><%= user.email %></a></td>
    </tr>
  <% end %>
</table>


