<h1>Edit a team</h1>


<h2><%= @team.name%></h2>
<h4><em><%= @team.course.name %> </em></h4>

<%= form_for @team do |form| %>
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :course_id %>
    <%= form.collection_select :course_id, Course.order(:name), :id, :name, { include_blank: true}, {class: "form-control" }%>
  </div>

  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, class: "form-control", rows: 4%>
  </div>

  <div>
  <!-- note: If you change the text, "Save and Edit Team Members, you must also change the text in teams_controller in the edit action!" -->
  <%= form.submit 'Save and Edit Team Members', class: "btn btn-success" %>
  </div>
  <br>

  <%= form.submit 'Save', class: "btn btn-success" %> <%=link_to "Cancel",teams_path,class: "btn btn-default"%>
<% end %>
