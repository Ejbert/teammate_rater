<h1>Team Index</h1>
<div class="table-responsive">
<table class="table table-striped">
  <tr>
    <th>Team ID</th>
    <th>Team Name</th>
    <th>Course</th>
    <th>Team Description</th>
    <th>Team Members</th>
    <th></th>
    <th></th>
  </tr>
<% @teams.each do |team|%>
  <tr>
    <td style="width:5%"><%=link_to team.id, team_path(team)%></td>
    <td style="width:15%"><%=link_to team.name, team_path(team)%></td>
    <td style="width:20%"><%=team.course.name%></td>
    <td style="width:30%"><%=team.description%></td>
    
    <td style="width:20%">
      <% Team_Member.where(team_id: team.id).each do |teammember|%>
        <li><%=teammember.user.first_name%> <%=teammember.user.last_name%>
        </li>
      <%end%>
    </td>
    <td style="width:5%"><%=link_to "Edit",edit_team_path(team)%></td>
    <td style="width:5%"><%=link_to "Delete", team_path(team), method: :delete, data: { confirm: 'You sure you want to delete this team?' }%></td>


  </tr>
  <% end%>
  </table>
</div>
