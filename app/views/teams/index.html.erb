<h1>Team Index</h1>

<table class="table table-striped">
  <tr>
    <th>Team ID</th>
    <th>Team Name</th>
    <th>Course</th>
    <th>Team Description</th>
    <th>Team Members</th>
    <th></th>
    <th></th>
  </tr>
<% @teams.each do |team|%>
  <tr>
    <td><%=link_to team.id, team_path(team)%></td>
    <td><%=link_to team.name, team_path(team)%></td>
    <td><%=team.course.name%></td>
    <td><%=team.description%></td>
    
    <td>
      <% Team_Member.where(team_id: team.id).each do |teammember|%>
        <li><%=teammember.user.first_name%> <%=teammember.user.last_name%>
        </li>
      <%end%>
    </td>
    <td><%=link_to "Edit",edit_team_path(team)%></td>
    <td><%=link_to "Delete", team_path(team), method: :destroy, data: { confirm: "You sure you want to delete this team?" }%></td>


  </tr>
<% end%>