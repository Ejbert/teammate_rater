<h1>Team Show</h1>
<table class="table table-striped">
  <tr>
    <th>Team ID</th>
    <th>Team Name</th>
    <th>Course</th>
    <th>Team Description</th>
    <th>Team Members</th>
  </tr>

  <tr>
    <td><%=@team.id%></td>
    <td><%=@team.name%></td>
    <td><%=@team.course.name%></td>
    <td><%=@team.description%></td>
    
    <td>
      <% Team_Member.where(team_id: @team.id).each do |teammember|%>
        <li><%=teammember.user.first_name%> <%=teammember.user.last_name%>
        </li>
      <%end%>
    </td>
  </tr>
</table>
<br>
<%=link_to "Edit Team",edit_team_path(@team.id),class: "btn btn-success"%> <%=link_to "Back to Show All Teams",teams_path,class: "btn btn-default"%>