<p>
<h2> Team Name: <%= Team.find_by(id: params["team_id"]).name%></h2>
</p>

<%= form_for @team_member do |form| %>
  <div class="form-group">
    <%= form.label :user_id %>
    <%= form.collection_select :user_id, User.order(:last_name), :id, :first_name, { include_blank: true}, {class: "form-control" }%>
  </div>

  <%= form.button 'Add Another',new_team_member_path(team_id) class: "btn btn-success" %>
  <%= form.button 'Save and Return', class: "btn btn-success" %>
  <%=link_to "Cancel",teams_path,class: "btn btn-default"%>

<% end %>